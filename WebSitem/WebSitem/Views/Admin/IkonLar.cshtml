@using WebSitem.Models.Siniflar
@model List<ikonlar>
@{
    ViewBag.Title = "IkonLar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
  <h3 class="mb-4">İkon Ekleme Ve Güncelleme sayfası</h3>

<table class="table table-bordered">
    <tr>
        <th>id</th>
        <th>İcon</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.id</td>
    <td><i class="@x.ikon"></i></td>
    <td><a href="/Admin/ikongetir/@x.id" class="btn btn-primary">Güncelle</a></td>
    <td><a href="/Admin/ikonSil/@x.id" class="btn btn-danger">Sil</a></td>

</tr>

    }


</table>
<a href="/Admin/YeniIkon" class="btn btn-primary">İkon Ekle</a>
